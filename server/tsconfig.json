{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"],
  "baseUrl": ".",
  "paths": {
    "@domain/*": ["src/domain/*"],
    "@features/*": ["src/features/*"],
    "@services/*": ["src/services/*"],
  }
}
