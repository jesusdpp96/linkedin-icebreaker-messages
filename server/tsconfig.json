{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": [
        "domain/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@services/*": [
        "services/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@services/*": ["services/*"]
      }
    }
  }
}