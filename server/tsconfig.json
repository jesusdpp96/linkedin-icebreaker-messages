{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": [
        "domain/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@services/*": [
        "services/*"
      ],
    },
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@services/*": ["services/*"]
      }
    }
  }
}