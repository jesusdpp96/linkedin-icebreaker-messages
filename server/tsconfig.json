{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es6",
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@domain": [
        "domain/index.ts"
      ],
      "@services": [
        "services/index.ts"
      ],
      "@features/icebreaker-messages-request": [
        "features/icebreaker-messages-request/index.ts"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@domain": [
          "domain/index.ts"
        ],
        "@services": [
          "services/index.ts"
        ],
        "@features/icebreaker-messages-request": [
          "features/icebreaker-messages-request/index.ts"
        ]
      },
    }
  }
}