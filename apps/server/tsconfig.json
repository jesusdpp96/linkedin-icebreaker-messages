{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
  },
  "references": [
    { "path": "../../domain" }
  ],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "node_modules", "dist"]
}